@using Microsoft.AspNetCore.Identity
@{
    var userName = User.Identity.Name;
}

<!DOCTYPE html>

<html>
<head>
    <title>bvdShop</title>
    <script src="https://use.fontawesome.com/c28c2b18c5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/site.css">
    <meta name="robots" content="noindex" />
</head>
<body>
    <div class="page-header fixed-top">
        <div class="page-header-inner">
            <div class="brand">
                <span>bvd</span>
            </div>
            <div class="logout">
                <span>
                    Пользователь:
                </span>
                <b>@userName</b>
                <a href="/Account/Logout" class="btn btn-logout">
                    Выйти
                </a>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="page-wrapper">
        <div class="page-sidebar navbar-collapse" aria-expanded="false">
            <ul class="page-sidebar-menu">
                <li>
                    <a href="/Manager/Index">
                        Главная
                    </a>
                </li>
                <li>
                    <a href="/Manager/Products">
                        Товары в наличии
                    </a>
                </li>
                <li>
                    <a href="/Manager/AllProducts">
                        Все товары
                    </a>
                </li>
                <li>
                    <a href="/Manager/Realization">
                        Продажа
                    </a>
                </li>
                <li>
                    <a href="/Manager/SaleFromStock">
                        Продажа со склада
                    </a>
                </li>
                <li>
                    <a href="/Manager/Booking">
                        Бронирование
                    </a>
                </li>
                <li>
                    <a href="/Manager/DefferedSaleFromStock">
                        Отложенная продажа со склада поставщика
                    </a>
                </li>
                <li>
                    <a href="/Manager/SaleList">
                        Список продаж
                    </a>
                </li>
                <li>
                    <a href="/Sale/SalePaymentList">
                        Список платежей
                    </a>
                </li>
                <li>
                    <a href="/Manager/BookingList">
                        Забронированные товары
                    </a>
                </li>
                <li>
                    <a href="/Manager/BookingClose">
                        Закрыть бронирование
                    </a>
                </li>
                <li>
                    <a href="/Manager/Expense">
                        Расход
                    </a>
                </li>

            </ul>
        </div>
        <div class="page-content-wrapper">
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        $(".deleteForm").click(function (event) {
            if (!confirm("Подтвердите удаление"))
                event.preventDefault();
        });
    </script>
</body>
</html>
