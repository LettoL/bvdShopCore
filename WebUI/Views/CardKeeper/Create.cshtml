
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Новый держатель карты</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form action="/CardKeeper/Create" method="post">
                    <h3 class="title">Создание</h3>
                    <label for="">Название</label>
                    <input class="form-control" name="title" type="text" style="margin-bottom: 20px;">
                    <label for="">Номер Карты</label>
                    <input class="form-control" name="cardNumber" type="text" style="margin-bottom: 20px;">
                    <label>Для Менеджера</label>
                    <select class="form-control" name="forManager" style="margin-bottom: 20px;">
                        <option value="true">Доступен</option>
                        <option value="false">Не доступен</option>
                    </select>
                    <button class="btn btn-submit">Сохранить</button>
                    <a href="/CardKeeper/Index" class="btn btn-dark">Назад</a>
                </form>
            </div>           
        </div>
    </div>
</div>

