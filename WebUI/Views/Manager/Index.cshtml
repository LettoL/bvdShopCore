@{
    Layout = "~/Views/Shared/ManagerLayout.cshtml";
}

<h3 class="page-title">Дневной отчет</h3>
<div class="row">
    @if (ViewBag.SalesProducts != null)
    {
        <div class="col-md-4">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="portlet-head">
                        <h5>Количество проданных товаров: @ViewBag.SalesAmount</h5>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                        <table class="table table-striped table-fixed">
                            <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>Количество</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in ViewBag.SalesProducts)
                                {
                                    <tr>
                                        <td>@p.Product?.Title</td>
                                        <td>@p.Amount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="col-md-4">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="portlet-head">
                        <h5>Сегодня нет проданных товаров</h5>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-md-8">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Сумма на кассе: @ViewBag.Sum рублей</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Дата</th>
                                <th>Сумма</th>
                                <th>Счет</th>
                                <th>Комментарий</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.Expenses)
                            {
                                <tr>
                                    <td>@x.Date</td>
                                    <td>@x.Sum</td>
                                    <td>@x.MoneyWorker</td>
                                    <td>@x.Comment</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Платежи по продажам за сегодня</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Время</th>
                                <th>Номер Продажи / Бронирования</th>
                                <th>Тип операции</th>
                                <th>Товары</th>
                                <th>Счет</th>
                                <th>Сумма</th>
                                <th>Скидка</th>
                                <th>Тип перевода</th>
                                <th>По России</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.SalePayments)
                            {
                                <tr>
                                    <td>@x.Date</td>
                                    <td>@x.SaleNumber</td>
                                    <td>@x.OperationType</td>
                                    <td>
                                    @foreach(var product in x.SaleProducts)
                                    {
                                        <span>@product.Title (@product.Amount шт)</span>
                                    }
                                    </td>
                                    <td>@x.MoneyWorker</td>
                                    <td>@x.Sum</td>
                                    <td>@x.Discount</td>
                                    <td>@x.PaymentType</td>
                                    <td>
                                        @if(x.ForRF == true)
                                        {
                                            <span>Да</span>
                                        }
                                        else
                                        {
                                            <span>Нет</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Список отложенных продаж со склада поставщика</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Дата</th>
                                <th>Сумма</th>
                                <th>Остаток</th>
                                <th>Всего</th>
                                <th>Магазин</th>
                                <th>Товар</th>
                                <th>Действие</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in ViewBag.DefferedSales)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.Date</td>
                                    <td>@p.Sum</td>
                                    <td>@p.Rest</td>
                                    <td>@p.Total</td>
                                    <td>@p.ShopTitle</td>
                                    <td>@p.ProductTitle</td>
                                    <td>
                                        <a class="btn btn-dark" href="/Manager/CloseDefferedSale/@p.Id">Закрыть продажу</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Открытые продажи</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Дата</th>
                                <th>Сумма</th>
                                <th>Товар</th>
                                <th>Действие</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.OpenSales)
                            {
                                <tr>
                                    <td>@x.Id</td>
                                    <td>@x.Date</td>
                                    <td>@x.Sum</td>
                                    <td>@x.ProductTitle</td>
                                    <td><a class="btn btn-dark" href="/Manager/CloseOpenSale/@x.Id">Закрыть продажу</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>