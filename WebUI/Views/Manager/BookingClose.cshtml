
@{
    ViewData["Title"] = "BookingClose";
    Layout = "~/Views/Shared/ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Закрытие бронирования</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form id="searchBooking">
                    <label for="">Введите номер</label>
                    <input style="margin-bottom: 20px" class="form-control" type="text">
                    <button type="submit" class="btn btn-submit btn-dark">Найти</button>
                </form>
                <div id="result">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $('#searchBooking').submit(e => {
        let id = e.target[0].value;
        getBooking(id);
        return false;
    })

    function getBooking(id) {

        const headers = new Headers();
        headers.append('Content-Type', 'application/json')

        let options = {
            method: 'GET',
            headers: headers,
        }
        console.log(id);

        $('#result').load(
            "/Manager/BookingCloseAdditional",
            {
                id: id
            }
        );
    }

</script>