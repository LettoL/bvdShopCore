    $(function () {
        $.datepicker.setDefaults($.datepicker.regional["ru"]);
        $("#dateFilter1").datepicker({
            onSelect: function (dateText) {
                date1 = dateText;
            }
        });
        $("#dateFilter2").datepicker({
            onSelect: function (dateText) {
                date2 = dateText;
            }
        });
    });
