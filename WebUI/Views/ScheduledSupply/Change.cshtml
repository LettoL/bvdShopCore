@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Изменение запланированной поставки</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form action="/ScheduledSupply/Change" method="post">
                    <h3 class="title">Редактирование</h3>
                    <input hidden name="id" type="text" value="@Model.Id">
                    <label for="">Товар: @Model.Title</label>
                    <label for="">Поставщик: @Model.Supplier</label>
                    <label for="">Магазин</label>
                    <select>
                        <option value="0">Магазин не выбран</option>
                        @foreach (var shop in ViewBag.Shops)
                        {
                            <option value="@shop.Id">@shop.Title</option>
                        }
                    </select>
                    <button class="btn btn-submit">Сохранить</button>
                    <a href="/ScheduledSupply/List" class="btn btn-dark">Назад</a>
                </form>
            </div>
        </div>
    </div>
</div>