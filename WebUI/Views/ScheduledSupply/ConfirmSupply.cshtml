@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Подтвердить доставку товара</h4>
                </div>
            </div>
            <div class="portlet-body">
                <label>Товар</label>
                <select class="form-control">
                    <option>Товар 1</option>
                </select>
                
                <label>Поставщик</label>
                <select class="form-control">
                    <option>Поставщик 1</option>
                </select>
                
                <label>Ожидаемое кол-во</label>
                <input type="number" disabled value="10" class="form-control">
                
                <label>Пришедшее кол-во</label>
                <input type="number" class="form-control">
                
                <button class="btn btn-submit">Сохранить</button>
                <a href="/ScheduledSupply/List" class="btn btn-dark">Назад</a>
            </div>
        </div>
    </div>
</div>