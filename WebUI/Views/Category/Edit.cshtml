@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Изменение категории</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form action="/Category/Edit" method="post">
                    <h3 class="title">Редактирование</h3>
                    <input hidden name="id" type="text" value="@Model.Id">
                    <label for="">Имя</label>
                    <input style="margin-bottom: 40px" class="form-control" name="title" type="text" value="@Model.Title">
                    <button class="btn btn-submit">Сохранить</button>
                    <a href="/Category/Index" class="btn btn-dark">Назад</a>
                </form>
            </div>            
        </div>
    </div>
</div>