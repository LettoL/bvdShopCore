@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3 class="page-title">Дневной отчет</h3>
<div class="row">
    <div class="col-md-4">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Общий Доход: @ViewBag.Sum рублей</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Общий Баланс: @ViewBag.Balance рублей</h5>
                </div>
            </div>
        </div>
    </div>   
</div>

<div class="row">
    <div class="col-md-8">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Список открытых продаж</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped table-condensed">
                        <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Дата</th>
                            <th>Сумма</th>
                            <th>Магазин</th>
                            <th>Товар</th>
                            <th>Действие</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in ViewBag.SalesWithOpenPayments)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>@p.Date</td>
                                <td>@p.Sum</td>
                                <td>@p.ShopTitle</td>
                                <td>@p.ProductTitle</td>
                                <td>
                                    <a class="btn btn-dark" href="/Admin/CloseSale/@p.Id">Закрыть продажу</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Список отложенных платежей</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Дата платежа</th>
                            <th>Сумма</th>
                            <th>Поставщик</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var d in ViewBag.DeferredPayments)
                        {
                            <tr>
                                <td>@d.Date</td>
                                <td>@d.Sum</td>
                                <td>@d.SupplierTitle</td>                               
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="">
    <div class="col-md-8">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>Отложенные продажи со склада поставщика</h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped table-condensed">
                        <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Дата</th>
                            <th>Сумма</th>
                            <th>Магазин</th>
                            <th>Товар</th>
                            <th>Действие</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in ViewBag.DefferedSalesFromStock)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>@p.Date</td>
                                <td>@p.Sum</td>
                                <td>@p.ShopTitle</td>
                                <td>@p.ProductTitle</td>
                                <td>
                                    <a class="btn btn-dark" href="/Admin/CloseDefferedSale/@p.Id">Закрыть продажу</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (ViewBag.SalesToday != null)
    {
        @foreach(var spt in ViewBag.SalesToday)
         {
             <div class="col-md-4">
                 <div class="portlet">
                     <div class="portlet-title">
                         <div class="portlet-head">
                             <h5>@spt.ShopTitle. Доход: @spt.Sum рублей</h5>
                         </div>
                     </div>
                     <div class="portlet-body">
                         <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                             <table class="table table-striped table-fixed">
                                 <thead>
                                 <tr>
                                     <th>Название</th>
                                     <th>Количество</th>
                                 </tr>
                                 </thead>
                                 <tbody>
                                 @foreach (var p in spt.SalesProducts)
                                 {
                                     <tr>
                                         <td>@p.Product?.Title</td>
                                         <td>@p.Amount</td>
                                     </tr>
                                 }
                                 </tbody>
                             </table>
                         </div>
                     </div>
                 </div>
             </div>
         }
        

    }
    else
    {
        <div class="col-md-4">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="portlet-head">
                        <h5>Сегодня нет проданных товаров</h5>
                    </div>
                </div>
            </div>
        </div>
    }

    
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>
                        Москва. Платежи по продажам за сегодня:
                    </h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Дата</th>
                                <th>Номер Продажи / Бронирования</th>
                                <th>Тип операции</th>
                                <th>Товары</th>
                                <th>Счет</th>
                                <th>Сумма</th>
                                <th>Скидка</th>
                                <th>Тип перевода</th>
                                <th>По России</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.MoscowSalePayments)
                            {
                                <tr>
                                    <td>@x.Date</td>
                                    <td>@x.SaleNumber</td>
                                    <td>@x.OperationType</td>
                                    <td>
                                        @foreach(var product in x.SaleProducts)
                                        {
                                            <span>@product.Title (@product.Amount шт)</span>
                                        }
                                    </td>
                                    <td>@x.MoneyWorker</td>
                                    <td>@x.Sum</td>
                                    <td>@x.Discount</td>
                                    <td>@x.PaymentType</td>
                                    <td>
                                        @if(x.ForRF == true)
                                        {
                                            <span>Да</span>
                                        }
                                        else
                                        {
                                            <span>Нет</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>
                        Санкт-Петербург. Платежи по продажам за сегодня:
                    </h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Время</th>
                                <th>Номер Продажи / Бронирования</th>
                                <th>Тип операции</th>
                                <th>Товары</th>
                                <th>Счет</th>
                                <th>Сумма</th>
                                <th>Скидка</th>
                                <th>Тип перевода</th>
                                <th>По России</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in ViewBag.PetersburgSalePayments)
                            {
                                <tr>
                                    <td>@x.Date</td>
                                    <td>@x.SaleNumber</td>
                                    <td>@x.OperationType</td>
                                    <td>
                                        @foreach(var product in x.SaleProducts)
                                        {
                                            <span>@product.Title (@product.Amount шт)</span>
                                        }
                                    </td>
                                    <td>@x.MoneyWorker</td>
                                    <td>@x.Sum</td>
                                    <td>@x.Discount</td>
                                    <td>@x.PaymentType</td>
                                    <td>
                                        @if(x.ForRF == true)
                                        {
                                            <span>Да</span>
                                        }
                                        else
                                        {
                                            <span>Нет</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h5>
                        Общий Расход:
                        @{
                            decimal sum = 0;
                            foreach (var x in ViewBag.Expenses)
                            {
                                sum += x.Sum;
                            }
                            <span>@Math.Abs(sum)</span>
                        }
                        рублей
                    </h5>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive" style="height: 350px; overflow-y: scroll;">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Дата</th>
                            <th>Сумма</th>
                            <th>Счет</th>
                            <th>Комментарий</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var x in ViewBag.Expenses)
                        {
                            <tr>
                                <td>@x.Date</td>
                                <td>@x.Sum</td>
                                <td>@x.MoneyWorker</td>
                                <td>@x.Comment</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>