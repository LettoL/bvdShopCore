@{
    Layout = Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Редактирование пользователя</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form action="/Admin/EditManager" method="post">
                    <input type="hidden" name="id" value="@Model.Id"/>
                    <label for="">Имя</label>
                    <input class="form-control" name="name" type="text" value="@Model.Name"><br/>

                    <button class="btn btn-submit">Сохранить</button>
                    <a href="/Admin/Managers" class="btn btn-dark">Назад</a>
                </form>
            </div>          
        </div>
    </div>
</div>