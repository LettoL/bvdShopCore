
@{
    ViewData["Title"] = "AcceptanceRecord";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
  .portlet-head {
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
  .portlet-head .form-control {
    min-width: 220px;
    margin-right: 10px;
  }
  .portlet-head label {
    margin-right: 10px;

    min-width: 70px;
  }

  table {
    width: 100%
  }

  table th {
    font-size: 18px;
  }
</style>

<div id="acceptanceRecord">
  <div class="portlet">
    <div class="portlet-title">
      <div class="portlet-head">
        <select class="form-control">
          <option value="0">Выбрать поставщика</option>
          <option>Поставщик</option>
        </select>
        <div>
          <label>Дата с:</label>
        </div>    
        <input class="form-control" type='date' />
        <label>Дата по:</label>
        <input class="form-control" type='date' />
        <button class="btn btn-dark">Показать</button>
      </div>
    </div>
  </div>

  <div class="portlet">
    <div class="portlet-body">
      <table class="table">
        <thead>
          <tr>
            <th colspan="3"></th>
            <th>Увеличение долга</th>
            <th>Уменьшение долга</th>
          </tr>
        </thead>
        <tbody>
          <template v-for='item in data'>
            <template v-if='item.products && item.products.length > 0'>
              <tr>
                <th colspan="3">Поступление товара от {{item.date}}</th>
                <th>{{item.products.reduce((a, b) => a + b.price * b.amount, 0)}}</th>
                <th></th>
              </tr>
              <tr v-for='product in item.products'>
                <td>{{product.title}}</td>
                <td colspan="2">{{product.amount}} шт. x {{product.price}} руб.</td>
                <td>{{product.amount * product.price}}</td>
                <td></td>
              </tr>
            </template>
            <template v-else>
              <tr>
                <th colspan="3">Оплата долга от {{item.date}}</th>
                <th></th>
                <th>{{item.minusDebt}}</th>
              </tr>
              <tr v-for='product in item.products'>
                <td>{{product.title}}</td>
                <td colspan="2">{{product.amount}} шт. x {{product.price}} руб.</td>
                <td>{{product.amount * product.price}}</td>
                <td>0</td>
              </tr>
            </template>
          </template>
          <tr>
            <th colspan="3">Итого</th>
            <th>Сумма долга 130000 руб</th>
            <th>Оплачено 10000 руб</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

