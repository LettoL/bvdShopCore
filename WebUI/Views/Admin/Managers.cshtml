@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3 class="page-title">Менеджеры <small>Просмотр и редактирование пользователей</small></h3>
<div class="row">
    <div class="col-md-12">

        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    Список менеджеров
                </div>   
                <div class="portlet-action">
                    <a href="/Admin/CreateManager" class="btn add-button">Новый менеджер</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
               <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Маржа</th>
                            <th>Оборот</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                        <tr>
                            <td>@m.Name</td>
                            <td>@m.Margin</td>
                            <td>@m.Sum</td>
                            <td>
                                <a href="/Admin/EditManager/@m.Id" class="btn btn-dark">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <a href="/Admin/DeleteManager/@m.Id" class="btn btn-danger deleteForm">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
               </div>
             </div>
        </div>
    </div>
</div>
