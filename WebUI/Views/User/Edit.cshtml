@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="portlet">
            <div class="portlet-title">
                <div class="portlet-head">
                    <h4>Изменение пользователя</h4>
                </div>
            </div>
            <div class="portlet-body">
                <form action="/User/Edit" method="post">
                <h3 class="title">Редактирование</h3>
                <input hidden name="id" type="text" value="@Model.Id">
                <label for="">Имя</label>
                <input class="form-control" name="title" type="text" value="@Model.Login">
                <label for="">Пароль</label>
                <input class="form-control" name="password" type="text" value="@Model.Password">
                <label for="">Роль</label>
                <select class="form-control" name="role">
                    <option value="@Model.Role">@Model.Role</option>
                    <option value="1">Администратор</option>
                    <option value="2">Менеджер</option>
                </select>
                <label for="">Магазин</label>
                <select class="form-control" name="shopId" type="text" style="margin-bottom: 40px;">
                    <option value="@Model.Shop?.Id">@Model.Shop?.Title</option>
                    @foreach (var s in ViewBag.shops)
                    {
                        <option value="@s.Id">@s.Title</option>
                    }
                </select>
                <button class="btn btn-submit">Сохранить</button>
                <a href="/User/Index" class="btn btn-dark">Назад</a>
            </form>
            </div>           
        </div>     
    </div>
</div>

